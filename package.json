  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "classnames": "^2.2.6",
    "dayjs": "^1.10.4",
    "gray-matter": "^4.0.2",
    "next": "latest",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-enhanced": "^5.0.0",
    "next-seo": "^4.20.0",
    "postcss-preset-env": "^6.7.0",
    "prism-react-renderer": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-live": "^2.2.3",
    "reading-time": "^1.3.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "^1.3.4",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.2.4",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "postcss": "^8.2.6",
    "prettier": "^2.0.2",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.1.3"
  }
}
